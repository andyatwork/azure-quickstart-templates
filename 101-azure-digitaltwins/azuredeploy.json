{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "location for the the resources to deploy."
            }
        },
        "adtInstanceName": {
            "type": "string",
            "metadata": {
                "description": "the instance name of the Azure Digital Twins resource"
            }
        },
        "principalId": {
            "type": "string",
            "metadata": {
                "description": "principalId if the user that will be given Azure Digital Twins Owner access to the instance"
            }
        }
    },
    "variables": {
        "adtOwnerRole": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'bcd981a7-7f74-457b-83e1-cceb9e632ffe')]"
    },
    "resources": [
        {
            "type": "Microsoft.DigitalTwins/digitalTwinsInstances",
            "apiVersion": "2020-12-01",
            "name": "[parameters('adtInstanceName')]",
            "location": "[parameters('location')]",
            "properties": {
            }
        },
        {
            "apiVersion": "2020-04-01-preview",
            "name": "[concat(parameters('adtInstanceName'), '/Microsoft.Authorization/', guid(uniqueString(parameters('adtInstanceName'))))]",
            "type": "Microsoft.DigitalTwins/digitalTwinsInstances/providers/roleAssignments",
            "dependsOn": [
                "[parameters('adtInstanceName')]"
            ],
            "properties": {
                "roleDefinitionId": "[variables('adtOwnerRole')]",
                "principalId": "[parameters('principalId')]",
                "principalType": "User"
            }
        }
    ],
    "outputs": {
        "ADTInstance": {
          "value": "[reference(parameters('adtInstanceName')).hostName]",
          "type": "string"
        }
    }
}